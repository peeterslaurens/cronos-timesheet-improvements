{
  "name": "Cronos Timesheet Dopamine",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Updates the cronos timesheets to make them usable!",
  "homepage_url": "https://timesheets.cronos.be",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/debugger.js", "src/bg/console.js", "eventPage.js"],
    "persistent": false
  },
  "permissions": [],
  "browser_action": {
      "default_title": "Click Me"
  },
  "content_scripts": [
    {
      "matches": [
        "https://timesheets.cronos.be/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://timesheets.cronos.be/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}